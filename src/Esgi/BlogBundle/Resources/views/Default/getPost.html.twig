{% extends 'EsgiBlogBundle::layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

{% for post in publishedPost %}
    <div>
        <h1>
            {{ post.title }}
        </h1>
        <h2>
            {{ post.created|date("d/m/Y") }}
        </h2>
        <p>
            {{ post.body }}
        </p>
    </div>
{% endfor %}


{% for comment in publishedComments %}

    <div>
        <p>{{comment.name}}</p>
        <p>{{comment.content}}</p>
    </div>

{% endfor %}


{{form(form)}}

{% endblock %}
