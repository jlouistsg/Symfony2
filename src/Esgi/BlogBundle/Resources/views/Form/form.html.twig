{% block text_label %}
    {% set label = attr.label %}
    {% set placeholder = attr.placeholder %}

    <label for="{{ placeholder }}" class="col-sm-2 control-label">{{ label }}</label>

    <div class="clearfix"></div>
{% endblock %}

{% block text_widget %}
    {% set type = type|default('text') %}

    <input type="{{ type }}" class="form-control col-xs-4" {{ block('widget_attributes') }} value="{{ value }}" />

    <div class="clearfix"></div>
{% endblock %}

{% block textarea_label %}
    {% set label = attr.label %}
    {% set placeholder = attr.placeholder %}

    <label for="{{ placeholder }}" class="col-sm-2 control-label">{{ label }}</label>

    <div class="clearfix"></div>
{% endblock %}

{% block choice_label %}
    {% set label = attr.label %}
    {% set placeholder = attr.placeholder %}

    <label for="{{ placeholder }}" class="col-sm-2 control-label">{{ label }}</label>

    <div class="clearfix"></div>
{% endblock %}

{% block choice_widget %}
    <select class="form-control col-xs-4" {{ block('widget_attributes') }}>

        {%- if placeholder is not none -%}
            <option value=""{% if required and value is empty %} selected="selected"{% endif %}>{{ placeholder|trans({}, translation_domain) }}</option>
        {%- endif -%}
        {%- if preferred_choices|length > 0 -%}
            {% set options = preferred_choices %}
            {{- block('choice_widget_options') -}}
            {%- if choices|length > 0 and separator is not none -%}
                <option disabled="disabled">{{ separator }}</option>
            {%- endif -%}
        {%- endif -%}
        {%- set options = choices -%}
        {{- block('choice_widget_options') -}}

    </select>

    <div class="clearfix"></div>
{% endblock %}

{% block submit_widget %}
    {% set label = attr.label %}

    <button type="submit" class="btn btn-primary">{{ label }}</button>

    <div class="clearfix"></div>
{% endblock %}
