<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!--{% stylesheets '@EsgiBlogBundle/Resources/css/*' filter='cssrewrite' %}-->
        {% stylesheets '@EsgiBlogBundle/Resources/css/_built.css' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <!-- {% javascripts '@EsgiBlogBundle/Resources/js/*' %} -->
        {% javascripts '@EsgiBlogBundle/Resources/js/_built.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Blog de l'ESGI</h1>

                <p>Développé sous Symfony2</p>

                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                                <li role="presentation">
                                    <a href="/">Accueil</a>
                                </li>
                                <li role="articles">
                                    <a href="/articles">Articles</a>
                                </li>
                                <li role="connexion">
                                    <a href="/login">Connexion</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

            <div class="col-xs-12 col-md-8">
                {% block body %}
                {% endblock %}
            </div>

            <div class="col-xs-6 col-md-4 well well-lg">
                {% block sidebar %}
                {% endblock %}
            </div>

            <div class="clearfix"></div>
        </div>

        <div class="container text-center">
            <p class="text-muted">
                <small>&copy; ESGI - All Right Reserved - Et ouais, ma poule !</small>
            </p>
        </div>

        {% block javascripts %}
            {{ tinymce_init() }}
        {% endblock %}
    </body>
</html>
