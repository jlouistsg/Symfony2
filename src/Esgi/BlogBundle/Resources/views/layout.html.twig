<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% stylesheets '@EsgiBlogBundle/Resources/css/built/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Blog de l'ESGI</h1>

                <p>Développé sous Symfony2</p>

                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                                <li role="presentation">
                                    <a href="/">Accueil</a>
                                </li>
                                <li role="articles">
                                    <a href="{{ path('blog_get_articles', { 'page': 1 }) }}">Articles</a>
                                </li>
                                <li role="connexion">
                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                                            <a href="/admin/">Administration</a>
                                        </li>
                                        <li>
                                        <a href="{{ path('fos_user_security_logout') }}">
                                        Deconnexion
                                        </a>
                                        </li>
                                    {% else %}
                                        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                                    {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

            <div class="col-xs-12 col-md-8">
                {% block body %}
                {% endblock %}
            </div>

            <div class="col-xs-6 col-md-4 well well-lg">
                {% block sidebar %}
                {% endblock %}
            </div>

            <div class="clearfix"></div>
        </div>

        <div class="container text-center">
            <p class="text-muted">
                <small>&copy; ESGI - All Right Reserved - Et ouais, ma poule !</small>
            </p>
        </div>

        {% block javascripts %}
            {{ tinymce_init() }}
        {% endblock %}
        {% javascripts '@EsgiBlogBundle/Resources/js/built/*' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
