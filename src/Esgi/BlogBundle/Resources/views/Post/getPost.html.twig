{% extends 'EsgiBlogBundle::layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

{% for post in publishedPost %}
    <div class="page-header">
        <h1>
            {{ post.title }}
            <small>
                le {{ post.updated|date("d M Y, h:s") }}
            </small>
        </h1>
    </div>

    <p>
        {{ post.body | raw }}
    </p>
{% endfor %}

<div class="page-header">
    <h3>
        Derniers commentaires
    </h3>
</div>

<table class="table table-hover">
    <tbody>
        {% for comment in publishedComments %}
            <tr>
                <td>
                    <div>
                        {{comment.content | raw}}
                    </div>
                    <div class="pull-right">
                        <b>{{comment.name}}</b>, le {{ comment.created|date("d M Y") }}
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="flash notice">
        {{ flashMessage }}
    </div>
{% endfor %}

<div class="page-header">
    <h3>
        Ajouter un commentaire
    </h3>
</div>

{% form_theme form 'EsgiBlogBundle:Form:comment.html.twig' %}
